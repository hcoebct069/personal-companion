<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/fragmentBG">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:id="@+id/fragmentBar">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/navBack"
            android:src="@drawable/ic_back_icon"
            android:background="@drawable/nav_btn_selector"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/fragment_reminder"
            android:id="@+id/fragmentName"
            android:textColor="@color/actionBarText"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            />
    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What do you want me to remind you about?"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reminder_msg"
            android:layout_below="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/edit_text_background"
            android:editable="true"
            android:elegantTextHeight="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:inputType="textMultiLine"
            android:height="100dp"
            android:gravity="top"
            android:textIsSelectable="true"
            android:hint="Enter Reminder Here"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="And when do you want to be reminded?"
            android:id="@+id/textView3"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/reminder_msg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Date"
            android:id="@+id/date_btn"
            android:background="@drawable/button_blue_selector"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/reminder_msg"
            android:layout_alignStart="@+id/reminder_msg"
            android:layout_alignRight="@+id/reminder_msg"
            android:layout_alignEnd="@+id/reminder_msg"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:singleLine="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Time"
            android:id="@+id/time_btn"
            android:background="@drawable/button_blue_selector"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/reminder_msg"
            android:layout_alignStart="@+id/reminder_msg"
            android:layout_alignRight="@+id/reminder_msg"
            android:layout_alignEnd="@+id/reminder_msg"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Reminder"
            android:id="@+id/rem_btn"
            android:background="@drawable/button_blue_selector"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/reminder_msg"
            android:layout_alignStart="@+id/reminder_msg"
            android:layout_alignRight="@+id/reminder_msg"
            android:layout_alignEnd="@+id/reminder_msg"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal" />
        </LinearLayout>
        </ScrollView>
</LinearLayout>